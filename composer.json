{
    "name": "sahanh/simpledto",
    "description": "Simple DTO object to move data",
    "license": "MIT",
    "authors": [
        {
            "name": "Sahan H",
            "email": "sahan@sahanz.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "illuminate/support": "^8.50"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4" : {
            "SH\\SimpleDTO\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "SH\\SimpleDTO\\Tests\\" : "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
